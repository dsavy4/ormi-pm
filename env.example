# Database
DATABASE_URL="postgresql://username:password@localhost:5432/ormi_property_management"

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"

# JWT Configuration - IMPORTANT: Generate a secure random secret
# To generate a secure JWT secret, run: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET="your-super-secret-jwt-key-here-use-64-random-bytes"
JWT_EXPIRES_IN="7d"

# Stripe Configuration
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key_here"
STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key_here"
STRIPE_WEBHOOK_SECRET="whsec_your_stripe_webhook_secret_here"

# API URLs
NEXT_PUBLIC_API_URL="http://localhost:3001"
FRONTEND_URL="http://localhost:3000"

# Email Configuration (for notifications)
EMAIL_FROM="noreply@ormi.com"
EMAIL_SERVICE="gmail"
EMAIL_USER="your-email@gmail.com"
EMAIL_PASS="your-app-password"

# Cloudflare Configuration (for deployment)
CLOUDFLARE_ACCOUNT_ID="your-cloudflare-account-id"
CLOUDFLARE_API_TOKEN="your-cloudflare-api-token"

# Application Configuration
NODE_ENV="development"
PORT="3001"

# Security Notes:
# - Never commit actual secrets to version control
# - Use strong, unique passwords for database connections
# - Generate JWT secrets using cryptographically secure random bytes
# - Use environment-specific secrets for different deployment environments
# - Rotate secrets regularly in production 